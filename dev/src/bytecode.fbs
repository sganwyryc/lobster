namespace bytecode;

struct LineInfo
{
    line:int;
    fileidx:int;
    bytecodestart:int;
}

table Function
{
    name:string;
    bytecodestart:int;
}

table Struct
{
    name:string;
    idx:int;
    nfields:int;
}

table Ident
{
    name:string;
    readonly:bool;
	global:bool;
}

struct SpecIdent
{
	ididx:int;
	typeidx:int;
}

enum Attr : ubyte (bit_flags) { SPLIT }

table BytecodeFile
{
    bytecode_version:int;  // The format of bytecode/typetable may change.
    bytecode:[int];
    bytecode_attr:[Attr];
	typetable:[int];

    stringtable:[string];

    lineinfo:[LineInfo];
    filenames:[string];

    functions:[Function];
    structs:[Struct];
    idents:[Ident];
	specidents:[SpecIdent];

    default_int_vector_types:[int];
    default_float_vector_types:[int];

    uses_frame_state:bool;
}

root_type BytecodeFile;

file_identifier "LBCF";
file_extension "lbc";
